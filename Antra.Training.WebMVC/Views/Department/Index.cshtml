@model IEnumerable<Department>
@{
}
<h1>List of Department</h1>
<a asp-controller="Department" asp-action="Create">Add New Department</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Location</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var m in Model)
        {
            <tr>
                <td>@m.Id</td>
                <td>@m.Name</td>
                <td>@m.Location</td>
                <td> <a asp-controller="department" asp-action="delete" asp-route-id="@m.Id" class="btn-danger btn">Delete</a>
                    <a asp-controller="department" asp-action="edit" asp-route-id="@m.Id" class="btn-warning btn">Edit</a>
                    </td>
            </tr>
        }
    </tbody>
</table>